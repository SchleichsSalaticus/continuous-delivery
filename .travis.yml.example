sudo: required
services:
  - docker

stages:
  - delivery

jobs:
  include:
    - stage: delivery
      env:
        global:
          - FOLDER=/package
          - OBS_PROJECT=my-obs-project
          - PACKAGE_NAME=my-package

      before_install:
        - docker pull shap/continuous_delivery:latest

      script:
        - |
          docker run -t -v "$(pwd):/package" \
          -e OBS_USER=$OBS_USER \
          -e OBS_PASS=$OBS_PASS \
          -e FOLDER=$FOLDER \
          -e OBS_PROJECT=$OBS_PROJECT \
          -e PACKAGE_NAME=$PACKAGE_NAME \
          shap/continuous_delivery \
          /bin/bash -c "cd /package;/upload.sh"
